<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ToDoMVVM">
    
    <DataTemplate x:Key="TaskItem.Template" DataType="{x:Type local:TaskItem}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Id}"/>
            <TextBlock Grid.Column="1" Text="{Binding Description}"/>
            <CheckBox Grid.Column="2" IsChecked="{Binding Status}"/>
        </Grid>
    </DataTemplate>

    <Style x:Key="ListView.Style" TargetType="{x:Type ListView}">
        <Style.Setters>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style.Setters>
    </Style>
        
</ResourceDictionary>